<h1 class="text-center">{{user.userName}}</h1>
<p class="text-center">Edita aqui tu perfil</p>
<div class="my-5 text-center">
    {{#if imagen}}
    <img src="/img/perfiles/{{imagen}}" alt="Perfil" class="rounded-circle">
    {{else}}
    <img src="/img/perfiles/perfil.jpg" alt="Perfil" class="rounded-circle">

    {{/if}}
</div>

<form action="/perfil?_csrf={{csrfToken}}" method="POST" enctype="multipart/form-data">
    {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}" /> --}}
    <input type="file" class="form-control-sm" id="formFileSm" name="myFile">
    <button class="btn btn-dark my-3">Cambiar imagen de perfil</button>
</form>